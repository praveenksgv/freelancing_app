<% if object.errors.any? %>
  <div id="error_explanation">
    <% error = [] %>
    <% object.errors.each do |attr, msg| %>
      <% error.append("#{attr} #{msg}") if object.errors[attr].first == msg %>
    <% end %>
    <div class="alert alert-danger">
      The form contains <%= pluralize(error.length, "error") %>.
    </div>
    <ul>
    <% error.each do |msg| %>
      <li> <%= msg %> </li>
    <% end %>
    </ul>
  </div>
<% end %>